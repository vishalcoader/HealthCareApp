<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".LabTestDetailActivity">
    <TextView
        android:layout_width="match_parent"
        android:text="Deliver Location : Pune"
        android:layout_marginHorizontal="30dp"
        android:textColor="#fff"
        android:background="@color/black"
        android:padding="10dp"
        android:textSize="22sp"
        android:paddingVertical="5dp"
        android:id="@+id/labtest_detail_tv1"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Lab Test and Packages"
        android:layout_marginHorizontal="30dp"
        android:textColor="#FFEB3B"
        android:padding="5dp"
        android:background="@color/black"
        android:textSize="22sp"
        android:paddingVertical="5dp"
        android:id="@+id/labtest_detail_tv2"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/labtest_detail_edittext"
        android:layout_width="290dp"
        android:layout_height="372dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:editable="false"
        android:text="Hi \n Hello"
        android:background="#787676"
        android:textSize="20sp"
        android:ems="10"
        android:gravity="start|top"
        android:textColor="#fff" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/labtest_detail_tv3"
        android:layout_height="wrap_content"
        android:text="textview"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textAllCaps="true"
        android:padding="5dp"
        android:paddingHorizontal="5dp"
        android:backgroundTint="#09850E"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:id="@+id/labtest_detail_addcart"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:padding="5dp"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#B80707"
        android:id="@+id/labtest_detail_back"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"/>

</LinearLayout>